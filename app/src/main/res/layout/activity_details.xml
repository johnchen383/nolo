                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:text="Specs"
                                android:textSize="@dimen/font_caption" />
                        </LinearLayout>

                        <LinearLayout
