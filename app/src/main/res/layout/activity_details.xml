                            android:orientation="vertical">

                            <TextView
                                style="@style/TextStroke.White"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="GPU" />

                            <TextView
                                android:id="@+id/gpu_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:text="Specs"
                                android:textSize="@dimen/font_caption" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ram_specs"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:orientation="vertical">

                            <TextView
                                style="@style/TextStroke.White"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="RAM" />

                            <TextView
                                android:id="@+id/ram_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:text="Specs"
                                android:textSize="@dimen/font_caption" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/storage_specs"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:orientation="vertical">

                            <TextView
                                style="@style/TextStroke.White"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Storage" />

                            <TextView
                                android:id="@+id/storage_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:text="Specs"
                                android:textSize="@dimen/font_caption" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/camera_specs"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:orientation="vertical">

                            <TextView
                                style="@style/TextStroke.White"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Camera" />

                            <TextView
                                android:id="@+id/camera_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:text="Specs"
                                android:textSize="@dimen/font_caption" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/keyboard_specs"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:orientation="vertical">

                            <TextView
                                style="@style/TextStroke.White"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Keyboard" />

                            <TextView
