                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/communication_specs"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:orientation="vertical">

                            <TextView
                                style="@style/TextStroke.White"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Communication" />

                            <TextView
                                android:id="@+id/communication_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:text="Specs"
                                android:textSize="@dimen/font_caption" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/audio_specs"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:orientation="vertical">

                            <TextView
                                style="@style/TextStroke.White"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Audio" />

                            <TextView
                                android:id="@+id/audio_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:text="Specs"
                                android:textSize="@dimen/font_caption" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/touchscreen_specs"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:orientation="vertical">

                            <TextView
                                style="@style/TextStroke.White"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Touchscreen" />

                            <TextView
                                android:id="@+id/touchscreen_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:text="Specs"
                                android:textSize="@dimen/font_caption" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/fingerprint_specs"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:orientation="vertical">

                            <TextView
                                style="@style/TextStroke.White"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Fingerprint reader" />

                            <TextView
                                android:id="@+id/fingerprint_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:text="Specs"
                                android:textSize="@dimen/font_caption" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/optical_specs"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:orientation="vertical">

                            <TextView
                                style="@style/TextStroke.White"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Optical drive" />

                            <TextView
                                android:id="@+id/optical_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:text="Specs"
                                android:textSize="@dimen/font_caption" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ports_specs"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:orientation="vertical">

                            <TextView
                                style="@style/TextStroke.White"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Ports" />

                            <TextView
                                android:id="@+id/ports_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:text="Specs"
                                android:textSize="@dimen/font_caption" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/battery_specs"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:orientation="vertical">

                            <TextView
                                style="@style/TextStroke.White"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Battery and power" />

                            <TextView
                                android:id="@+id/battery_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:text="Specs"
                                android:textSize="@dimen/font_caption" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/sensors_specs"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:orientation="vertical">

                            <TextView
                                style="@style/TextStroke.White"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Sensors" />

                            <TextView
                                android:id="@+id/sensors_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:text="Specs"
                                android:textSize="@dimen/font_caption" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/os_specs"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:orientation="vertical">

                            <TextView
                                style="@style/TextStroke.White"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
