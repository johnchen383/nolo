<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.LogInActivity"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/login_logo" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="@dimen/login_margin_horizontal">

        <TextView
            android:id="@+id/title_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/login_margin_top"
            android:paddingBottom="@dimen/login_padding_small"
            android:text="LOG IN"
            android:textSize="30sp" />

        <EditText
            android:id="@+id/email_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/title_text_view"
            android:hint="EMAIL"
            android:inputType="textEmailAddress"
            android:paddingTop="@dimen/login_padding_med"
            android:textColor="@color/light_grey"
            android:textColorHint="@color/light_grey" />

        <RelativeLayout
            android:id="@+id/password_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/email_edit">

            <EditText
                android:id="@+id/password_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="PASSWORD"
                android:paddingTop="@dimen/login_padding_med"
                android:textColorHint="@color/light_grey" />

            <ImageView
                android:id="@+id/eye_open"
                android:layout_width="@dimen/eye_icon_size"
                android:layout_height="@dimen/eye_icon_size"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                app:srcCompat="@drawable/login_icon_eye_open"
                android:clickable="true" />
        </RelativeLayout>

        <TextView
            android:id="@+id/forgot_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/password_input"
            android:paddingBottom="@dimen/login_padding_med"
            android:text="Forgot your password?"
            android:textColor="@color/light_brown" />

        <Button
            android:id="@+id/login_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/forgot_text_view"
            android:layout_marginBottom="@dimen/login_padding_small"
            android:backgroundTint="@color/light_grey"
            android:paddingVertical="@dimen/button_padding"
            android:text="LOG IN" />

        <Button
            android:id="@+id/login_google_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/login_button"
            android:paddingVertical="@dimen/button_padding"
            android:backgroundTint="@color/light_grey"
            android:text="LOG IN WITH GOOGLE" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/login_google_button"
            android:paddingTop="@dimen/login_padding_med"
            android:layout_centerHorizontal="true">

        <TextView
            android:id="@+id/question_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Don't have an account?" />

        <TextView
            android:id="@+id/register_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/question_text_view"
            android:text=" Register"
            android:textColor="@color/light_brown"
            android:clickable="true"/>

        </RelativeLayout>

    </RelativeLayout>


</LinearLayout>