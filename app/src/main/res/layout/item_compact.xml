<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_clickable"
    android:layout_width="192dp"
    android:layout_height="wrap_content"
    android:layout_marginRight="10dp"
    android:background="@color/navy"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/item_border">
        <ImageView
            android:layout_margin="7dp"
            android:id="@+id/item_img"
            android:layout_width="match_parent"
            android:layout_height="164dp"
            android:scaleType="centerCrop"
            android:src="@drawable/item_accessory_sony_wh_1000xm4_1_black" />
    </LinearLayout>


    <TextView
        android:id="@+id/item_title"
        android:layout_marginTop="6dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/transparent"
        android:text="Apple iPhone 13 Pro Max"
        android:maxLines="1"
        android:textColor="@color/white"
        android:gravity="center"
        android:textSize="@dimen/font_caption" />

    <TextView
        android:id="@+id/item_price"
        style="@style/TextStroke.White"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/transparent"
        android:text="1999.00 NZD"
        android:textColor="@color/white"
        android:textSize="@dimen/font_caption"
        android:textFontWeight="500"
        />


</LinearLayout>