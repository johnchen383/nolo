<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Nolo" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/navy</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/light_brown</item>
        <item name="colorSecondaryVariant">@color/white</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:background">@color/navy</item>
        <item name="android:fontFamily">@font/abeezee_regular</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHighlight">@color/light_brown</item>
    </style>

    <!-- Bottom navigation style-->
    <style name="BottomNavigation">
        <item name="itemBackground">@drawable/nav_indicator</item>
        <item name="elevation">0dp</item>
        <item name="labelVisibilityMode">unlabeled</item>
        <item name="itemRippleColor">@android:color/transparent</item>
    </style>

    <!-- Text input style -->
    <style name="Widget.AppTheme.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.Dense">
        <item name="errorIconDrawable">@null</item>
        <item name="errorTextColor">@color/light_brown</item>
        <item name="colorAccent">@color/light_brown</item>
        <item name="colorControlActivated">@color/light_brown</item>
    </style>

    <style name="TextInputLayout">
        <item name="android:textColorHint">@color/light_grey</item>
        <item name="android:background">@drawable/text_input_bg</item>
    </style>

    <style name="TextInputLayout_EditText">
        <item name="android:gravity">bottom</item>
        <item name="android:background">@drawable/text_input_bg</item>
        <item name="android:textSize">@dimen/font_body1</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Material Button styles -->
    <style name="RoundButton">
        <item name="android:textSize">@dimen/font_body1</item>
        <item name="android:paddingVertical">@dimen/round_button_padding</item>
        <item name="cornerRadius">@dimen/round_button_radius</item>
        <item name="strokeColor">@color/faint_white</item>
        <item name="strokeWidth">@dimen/round_button_stroke_width</item>
    </style>

    <style name="RoundButton.Outlined">
        <item name="backgroundTint">@color/transparent</item>
    </style>

    <style name="RoundButton.Filled">
        <item name="backgroundTint">@color/white</item>
    </style>

    <style name="RoundIconButton" parent="Widget.MaterialComponents.Button.Icon">
        <item name="android:textSize">@dimen/font_body1</item>
        <item name="android:paddingVertical">@dimen/round_button_padding</item>
        <item name="cornerRadius">@dimen/round_button_radius</item>
        <item name="strokeColor">@color/faint_white</item>
        <item name="strokeWidth">@dimen/round_button_stroke_width</item>
        <item name="iconSize">@dimen/icon_size</item>
        <item name="iconTint">@null</item>
        <item name="iconGravity">textStart</item>
    </style>

</resources>