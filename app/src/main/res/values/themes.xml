<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Nolo" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/navy</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/light_brown</item>
        <item name="colorSecondaryVariant">@color/white</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/abeezee_regular</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHighlight">@color/light_brown</item>
    </style>

    <!-- Bottom navigation style-->
    <style name="BottomNavigation">
        <item name="itemBackground">@drawable/nav_indicator</item>
        <item name="elevation">0dp</item>
        <item name="labelVisibilityMode">unlabeled</item>
        <item name="itemRippleColor">@android:color/transparent</item>
    </style>

    <!-- Text input style -->
    <style name="Widget.AppTheme.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.Dense">
        <item name="errorIconDrawable">@null</item>
        <item name="errorTextColor">@color/light_brown</item>
        <item name="colorAccent">@color/light_brown</item>
        <item name="colorControlActivated">@color/light_brown</item>
    </style>

    <style name="TextInputLayout">
        <item name="android:textColorHint">@color/light_grey</item>
        <item name="android:background">@drawable/text_input_bg</item>
        <item name="hintTextColor">@color/light_grey</item>
        <item name="boxStrokeColor">@color/white</item>
    </style>

    <style name="TextInputLayout_EditText">
        <item name="android:gravity">bottom</item>
        <item name="android:background">@drawable/text_input_bg</item>
        <item name="android:textSize">@dimen/font_body1</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Material Button styles -->
    <style name="RoundButton" parent="Widget.MaterialComponents.Button.Icon">
        <item name="android:textSize">@dimen/font_body1</item>
        <item name="android:paddingVertical">@dimen/round_button_padding</item>
        <item name="cornerRadius">@dimen/round_button_radius</item>
        <item name="strokeColor">@color/faint_white</item>
        <item name="strokeWidth">@dimen/round_button_stroke_width</item>
    </style>

    <style name="RoundButton.Outlined" />

    <style name="RoundButton.Filled">
        <item name="backgroundTint">@color/white</item>
        <item name="strokeColor">@null</item>
        <item name="strokeWidth">@null</item>
        <item name="android:textColor">@color/navy</item>
    </style>

    <style name="RoundButton.Icon">
        <item name="iconSize">@dimen/icon_size</item>
        <item name="iconTint">@null</item>
        <item name="iconGravity">textStart</item>
    </style>

    <!-- Details spec tag styles -->
    <style name="DetailsSpecTag">
        <item name="android:paddingVertical">5dp</item>
        <item name="android:paddingHorizontal">7dp</item>
        <item name="android:background">@drawable/details_spec_tag</item>
        <item name="android:textColor">@color/faint_white</item>
        <item name="android:textSize">@dimen/font_overline</item>
    </style>

    <!-- Text stroke styles -->
    <style name="TextStroke">
        <item name="android:shadowDx">1.5</item>
        <item name="android:shadowDy">1.3</item>
        <item name="android:shadowRadius">1.6</item>
    </style>

    <style name="TextStroke.White">
        <item name="android:shadowColor">@color/white</item>
    </style>

    <style name="TextStroke.Brown">
        <item name="android:shadowColor">@color/light_brown</item>
    </style>

    <!-- Touch target container styles -->
    <style name="TouchTarget">
        <item name="android:background">@null</item>
        <item name="android:clickable">true</item>
    </style>

</resources>